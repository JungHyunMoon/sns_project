<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.moonstargram.like.dao.LikeDAO">
	<select id="selectLikeListByPostId" parameterType="int" resultType="com.moonstargram.like.model.Like">
		SELECT
			`userId`
			, `postId`
			, `createdAt`
		FROM
			`like`
		WHERE
			`postId` = #{postId}
	</select>
	
	<select id="selectLikeByUserIdPostId" parameterType="map" resultType="com.moonstargram.like.model.Like">
		SELECT
			`userId`
			, `postId`
			, `createdAt`
		FROM
			`like`
		WHERE
			`postId` = #{postId} 
			AND `userId` = #{userId}
	</select>
	
	<delete id="deleteLikeByUserIdPostId" parameterType="map">
		DELETE FROM
			`like`
		WHERE
			`postId` = #{postId} 
			AND `userId` = #{userId}
	</delete>
	
	<insert id="insertLike" parameterType="map">
		INSERT INTO `like`
		(
			`userId`
			, `postId`
			, `createdAt`
		)
		VALUES
		(
			#{userId}
			, #{postId}
			, NOW()
		)
		
	</insert>
</mapper>