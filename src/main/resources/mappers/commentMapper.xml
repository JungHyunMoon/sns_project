<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.moonstargram.comment.dao.CommentDAO">
	<insert id="insertComment" parameterType="map">
		INSERT INTO `comment`
		(
			`userId`
			, `postId`
			, `content`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{postId}
			, #{content}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectComment" resultType="com.moonstargram.comment.model.Comment">
		SELECT
			`id`
			, `userId`
			, `postId`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		ORDER BY
			`createdAt` ASC
	</select>
	
	<select id="selectCommentListByPostId" parameterType="int" resultType="com.moonstargram.comment.model.Comment">
		SELECT
			`id`
			, `userId`
			, `postId`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
		ORDER BY
			`createdAt` ASC
	</select>
	
	<delete id="deleteComment" parameterType="int">
		DELETE FROM
			`comment`
		WHERE
			`id` = #{id}
	</delete>
</mapper>