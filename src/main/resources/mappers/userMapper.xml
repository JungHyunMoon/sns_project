<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moonstargram.user.dao.UserDAO">
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`email`
			, `nickname`
			, `loginId`
			, `password`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{email}
			, #{nickname}
			, #{loginId}
			, #{password}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.moonstargram.user.model.User">
		SELECT
			`id`
			, `email`
			, `nickname`
			, `loginId`
			, `password`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
	
	<select id="getUserById" parameterType="int" resultType="com.moonstargram.user.model.User">
		SELECT
			`id`
			, `email`
			, `nickname`
			, `loginId`
			, `password`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WhERE
			`id` = #{userId}
		ORDER BY `id` DESC
	</select>
</mapper>